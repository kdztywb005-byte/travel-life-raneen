[25/‏8 9:56 م] Raneen Hosny Ayyad: const express = require('express');
const fs = require('fs');
const path = require('path');
const app = express();
const PORT = 3001;

// Endpoint to get all places
app.get('/api/places', (req, res) => {
    const dataPath = path.join(__dirname, 'data', 'places.json');
    fs.readFile(dataPath, 'utf8', (err, data) => {
        if (err) {
            return res.status(500).json({ error: 'Failed to load places' });
        }
        res.json(JSON.parse(data));
    });
});

// Endpoint to get place by id
app.get('/api/places/:id', (req, res) => {
    const dataPath = path.join(__dirname, 'data', 'places.json');
    fs.readFile(dataPath, 'utf8', (err, data) => {
        if (err) {
            return res.status(500).json({ error: 'Failed to load places' });
        }
        const places = JSON.parse(data);
        const place = places.find(p => p.id === req.params.id);
        if (!place) {
            return res.status(404).json({ error: 'Place not found' });
        }
        res.json(place);
    });
});

app.listen(PORT, () => {
    console.log(`Server listening on port ${PORT}`);
});
